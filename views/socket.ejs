  <body>
    <%- include('nav.html') %>

    <!-- AJAX - Jquery이용 -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <!-- socket.io 사용 -->
    <!-- https://cdnjs.com/libraries/socket.io 버전 잘 체크해서 쓸것.(package.json에서 확인)-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.3/socket.io.js" integrity="sha512-iWPnCISAd/J+ZacwV2mbNLCaPGRrRo5OS81lKTVPtRg1wGTC20Cfmp5Us5RcbLv42QLdbAWl0MI57yox5VecQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <div>채팅방</div>
    <div id="content"></div>
    <input type="text" id="input1">
    <button id="send">서버에 메세지 보내기</button>
    <button id="room1">채팅방 1입장</button>
    <button id="room1-send">채팅방1에서 메세지보내기</button>

    <script>
      var socket = io(); //웹 소켓 접속코드

      $('#room1-send').click(function(){
        socket.emit('room1-send', '반가워 채팅방1 사람들아')
      });

      $('#room1').click(function(){
        socket.emit('joinroom', '채팅방 입장')
      });

      $('#send').click(function(){
        socket.emit('user-send', $('#input1').val()); //socket.emit('작명', '메세지') - 서버로 메세지 보냄
      });

      socket.on('broadcast', function(data){//누가 'user-send'이름으로 메세지보내면 내부코드 실행, data - 유저가 보낸 메세지
        console.log(data);
        $('#content').append('<div>' + data + '</div>')
      });

    </script>



    

